# ──────────────────────────────
# MongoDB Atlas (replace creds)
# ──────────────────────────────
MONGO_URI=mongodb+srv://sandeepk:sandeep@cluster0.tnbpi.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
MONGO_DB=renova

# ──────────────────────────────
# RabbitMQ (shared)
# ──────────────────────────────
# Default points to host broker (Docker Desktop: host.docker.internal)
RABBITMQ_URI=amqp://raina:raina@host.docker.internal:5672/
# Canonical exchange used by Renova
RABBITMQ_EXCHANGE=raina.events

# ──────────────────────────────
# Event org segments
# ──────────────────────────────
EVENTS_ORG=renova
PLATFORM_EVENTS_ORG=platform

# ──────────────────────────────
# Service identity
# ──────────────────────────────
SERVICE_NAME=learning-service
SERVICE_PORT=9013

# ──────────────────────────────
# Upstream services (read-only)
# ──────────────────────────────
# If running via docker compose, these can be service DNS names instead of host.docker.internal
CAPABILITY_SERVICE_BASE_URL=http://host.docker.internal:9012
ARTIFACT_SERVICE_BASE_URL=http://host.docker.internal:9011

# ──────────────────────────────
# LLM provider (used only when capability has llm_config)
# ──────────────────────────────
OPENAI_API_KEY=<OPENAI_API_KEY>
LLM_MODEL=gpt-4.1-mini
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
LLM_STRICT_JSON=1

# ──────────────────────────────
# MCP invocation knobs (used when capability uses integrations)
# ──────────────────────────────
MCP_HTTP_TIMEOUT=60
MCP_STDIO_KILL_TIMEOUT=10
MCP_RETRY_MAX_ATTEMPTS=2
MCP_RETRY_BACKOFF_MS=250

# ──────────────────────────────
# Run behavior
# ──────────────────────────────
STRICT_SCHEMA_VALIDATION=1
ALLOW_PARTIAL_STEP_FAILURES=0
